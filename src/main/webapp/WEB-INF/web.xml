<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Pahana Edu Billing System</display-name>
    <description>A comprehensive billing management system for educational institutions</description>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 minutes -->
    </session-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Bills Servlet -->
    <servlet>
        <servlet-name>BillsServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.BillsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillsServlet</servlet-name>
        <url-pattern>/bills</url-pattern>
    </servlet-mapping>

    <!-- Create Bill Servlet -->
    <servlet>
        <servlet-name>CreateBillServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.CreateBillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBillServlet</servlet-name>
        <url-pattern>/create-bill</url-pattern>
    </servlet-mapping>

    <!-- View Bill Servlet -->
    <servlet>
        <servlet-name>ViewBillServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.ViewBillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewBillServlet</servlet-name>
        <url-pattern>/view-bill</url-pattern>
    </servlet-mapping>

    <!-- Edit Bill Servlet -->
    <servlet>
        <servlet-name>EditBillServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.EditBillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBillServlet</servlet-name>
        <url-pattern>/edit-bill</url-pattern>
    </servlet-mapping>



    <!-- Customers Servlet -->
    <servlet>
        <servlet-name>CustomersServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.CustomersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomersServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>

    <!-- Items Servlet -->
    <servlet>
        <servlet-name>ItemsServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.ItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemsServlet</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>

    <!-- Reports Servlet -->
    <servlet>
        <servlet-name>ReportsServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.ReportsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportsServlet</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <!-- Settings Servlet -->
    <servlet>
        <servlet-name>SettingsServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.servlet.SettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SettingsServlet</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

    <!-- Security Filter -->
     <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.pahanaedu.pahanaedubilling.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/bills</url-pattern>
        <url-pattern>/customers</url-pattern>
        <url-pattern>/items</url-pattern>
        <url-pattern>/reports</url-pattern>
        <url-pattern>/settings</url-pattern>
        <url-pattern>/create-bill</url-pattern>
        <url-pattern>/view-bill</url-pattern>
        <url-pattern>/edit-bill</url-pattern>
    </filter-mapping>

    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Context Parameters -->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/pahanaedu</param-value>
    </context-param>
    <context-param>
        <param-name>db.username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value>Subha@1234</param-value>
    </context-param>

    <!-- MIME Type Mappings -->
    <mime-mapping>
        <extension>pdf</extension>
        <mime-type>application/pdf</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>

</web-app>

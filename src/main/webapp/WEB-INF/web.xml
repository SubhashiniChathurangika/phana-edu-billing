<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>PahanaEduBillingSystem</display-name>

    <!-- ================== SERVLETS ================== -->

    <!-- Customer Servlet -->
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.controller.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>

    <!-- Item Servlet -->
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.controller.ItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>

    <!-- Bill Servlet -->
    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.controller.BillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/bills</url-pattern>
    </servlet-mapping>

    <!-- User (Login) Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.pahanaedu.pahanaedubilling.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- ================== WELCOME PAGE ================== -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
